

#include <TinyGPS.h>

#include <LiquidCrystal.h>

#include <SoftwareSerial.h>


SoftwareSerial gps_serial(9,6);  //(rx,tx)
SoftwareSerial gsm_serial(10,11);
TinyGPS gps;         //creates gps object
LiquidCrystal lcd(A5,A4,A3,5,3,1,0);  //lcd pbject

float lat,lon;
int in;
void display_lcd(float x,float y);
void send_sms_loc(float x,float y);
void get_gps_pos();

void setup(){
  Serial.begin(9600);
  gps_serial.begin(9600);
  lcd.begin(16,2);
  gsm_serial.begin(9600);
  pinMode(13,INPUT);
}
void loop(){
  while (Serial.available()>0){
      get_gps_pos();
      delay(1000);
      send_sms_loc(lat,lon);
      delay(1000);
      display_lcd(lat,lon);
      delay(1000);
    
  }
}

void get_gps_pos(){
  if (gps_serial.available()){
    if (gps.encode(gps_serial.read())){
      gps.f_get_position(&lat,&lon);
      Serial.println(lat);
    }
  }
  
}
void send_sms_loc(float x ,float y){
   // put your main code here, to run repeatedly:
  if(gsm_serial.available()>0){
    gsm_serial.println("AT+CMGF=1");
    delay(1000);  
    Serial.println("sending SMS");
    gsm_serial.println("AT+CMGS=\"+919494706564\"\r"); 
    delay(1000);
    gsm_serial.println("I Have problem at"); 
    delay(1000);
    gsm_serial.println(lat);
    delay(1000);
    gsm_serial.println(lon);
    delay(1000);
    gsm_serial.println(char(26));
    delay(1000);}

}

void display_lcd(float x,float y){
      lcd.clear();
    lcd.setCursor(1,0); 
    lcd.print("GPS Signal");
    lcd.print("LAT:");
    lcd.setCursor(5,0);
    lcd.print(x);
    lcd.setCursor(0,1);
    lcd.print(",LON:");
    lcd.setCursor(5,1);
    lcd.print(y);
}
